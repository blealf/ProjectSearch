<div class="nav-menu-holder" >
    <% if logged_in? %>
        <%= link_to "Logout", logout_path, method: "delete", class: 'nav-menu', id: 'log-session' %>
        <% if current_staff.present? %>
         	<%= link_to "My Projects", staff_path(current_staff.id), class: 'nav-menu' , id: 'portal_link'  %>
        <%  elsif current_student.present? %>
        	<%= link_to "My portal", student_path(current_student.id), class: 'nav-menu', id: 'portal_link'  %> 
         <% end %>
    <% else %>
        <%= link_to "Signup", signup_path, class: 'nav-menu', id: 'log-session' %> 
        <%= link_to "Login", login_path, class: 'nav-menu', id: 'log-session' %>
    <% end %> 

</div>